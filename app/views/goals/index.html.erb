
<section class="page group">
<%= render partial: 'layouts/overview_side_bar' %>

<section class="page-content">
  <header class="page-content-header group">
    <h3 class="page-title"><%= current_user.username %>'s Goals</h3>
    <div class="link-button">
       <a href="<%= new_goal_url %>">Create New Goal</a>
     </div>
  </header>

 
  <section class="cards group">
    <% @goals.each do |goal| %>
      <%= render partial: 'goal', locals: { goal: goal } %>
    <% end %>
  </section>
</section>
</section>