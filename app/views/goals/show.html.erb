<%= render partial: 'layouts/overview_side_bar' %>

<section class="page-content">
  <header class="page-content-header">
    <h3 class="page-content-title">
    <%= @goal.name %>
    </h3>
    <%= link_to "Edit Goal", edit_goal_url(@goal) %>
    <%= button_to "Delete Goal", goal_url(@goal), method: :delete, form_class: "delete-button" %>
  </header>
  <article class="page-body">
    <%= render partial: 'goals/goal', locals: { goal: @goal } %>
  </article>
</section>