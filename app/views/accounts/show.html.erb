<section class="page-content">

  <header class="account-header"
    <h3 class="header-title"><%= @account.account_name %></h3>

    <form action="<%= account_choose_url %>" method="get">
      <select name="account[id]">
        <option value="0">All</option>
        <% @accounts.each do |account| %>
           <option value="<%= account.id %>" <%= "selected" if @account.id == account.id%>>
           <%= account.account_name %>
           </option>
        <% end %>
      </select>
      <input type="submit" value="View">
  </header>

  <article class="page-body">
      <table class="transactions-table">
      <tr class="table-headers">
        <td>Date</td>
        <td>Description</td>
        <td>Category</td>
        <td>Amount</td>
      </tr>
      <% @transactions.each do |transaction| %>
      <% category = transaction.try(:merchant_category).merchant_category %>
        <tr class="table-data">
          <td><%= transaction.try(:date) %></td>
          <td><%= transaction.try(:description) %></td>
          <td><%= category %></td>
          <td><%= transaction.try(:amount) %></td>
        </tr>
      <% end %>
      </table>
  </article>
  
  
</section>