<section class="page group">
<ul class="nav-side-bar group">
  <% if @user == current_user %>
    <li><a href="<%= user_url(current_user) %>">My Profile</a></li>
    <li><a href="<%= edit_user_url(current_user) %>">Edit Profile</a></li>
    <li><a href="<%= accounts_url %>">Accounts</a></li>
    <li><a href="<%= user_url(current_user) %>">Settings</a></li>
    <li><a href="<%= user_url(current_user) %>">Email Settings</a></li>
    <li><a href="<%= user_url(current_user) %>">Notification Settings</a></li>
  <% else %>
    <li>
    <% if @already_following %>
      <a href="<%= unfollow_user_url(@user) %>">Unfollow <%= @user.username %></a></li>
    <% else %>
      <a href="<%= follow_user_url(@user) %>">Follow <%= @user.username %></a></li>
    <% end %>
    <li><form action="<%=user_messages_url(@user) %>" method="post" class="message-form">
            <%= auth_token %>
            <label for="message-title">Subject</label>
            <input type="text" name="message[title]" value="<%= @message.title %>" id="message-title">

            <textarea name="message[body]"><%= @message.body %></textarea>
            <input type="submit" value="Send Message">
            </form>
    </li>
    <li>Messages</li>
    <ul>
    <% @messages.each do |message| %>
        <li>
          <div class="message">
          <header>
            <h3 class="user">
            <% if message.sender == current_user %>
              <%= "You"  %>
            <% else %>
              <a href="<%= user_url(message.sender) %>">
              <%= message.sender.username %>
              </a>
            <% end %>
            sent: 
            </h3>

            <h3><%= message.title %></h3>
            
            <time><%= message.created_at %></time>
          </header>
          <div class="message-body">
            <p><%= message.body %></p>
            <%= button_to "Delete Message", user_message_url(@user.id, message.id), method: :delete %>
          </div>
          </div>
        </li>  
    <% end %>
    </ul>
  <% end %>
</ul>
  <section class="page-content">
  <article class="user">
    <header class="user-header group">
      <img src="<%= @profile.try(:picture_url) %>">
      <h3 class="page-title"><%= @user.username %></h3>
      <h3 class="fame">Fame: <%= @user.total_fame %></h3>

      <ul class="user-header-info-list">
        <li class="user-header-info-item">Age: <%= @profile.age %></li>
        <li class="user-header-info-item">Gender: <%= @profile.gender %></li>
        <li class="user-header-info-item">
        Zip Code: <%= @profile.zip_code.to_s.try(:rjust, 5, '0') %></li>
        <li class="user-header-info-item">
        Joined: <%= @profile.created_at.to_formatted_s(:month_and_year) %></li>
      </ul>
  </header>

  <%= render partial: 'layouts/overview_main', locals: { goals: @goals, budgets: @budgets } %>
  </article>
</section>
</section>